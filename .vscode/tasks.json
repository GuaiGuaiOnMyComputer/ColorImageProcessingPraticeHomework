{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++ windows compile current file",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-g",
                "-I", "C:\\Program Files\\OpenCV\\MinGW\\install\\opencv\\include",
                "-L", "C:\\Program Files\\OpenCV\\MinGW\\install\\opencv\\x64\\mingw\\bin",
                "-llibopencv_world470",
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        },
        {
            "label": "g++ linux compile current file",
            "type": "shell",
            "command": "g++",
            "args": [
                "${file}",
                "-g",
                "-I", "\\usr\\local\\include\\opencv4",
                "-L", "\\usr\\local\\lib",
                "-llibopencv_core.so.460",
                "-o", "${fileDirname}\\${fileBasenameNoExtension}.exe",
            ],
            "group": "build",
            "presentation": {
                // Reveal the output only if unrecognized errors occur.
                "reveal": "silent"
            },
            // Use the standard MS compiler pattern to detect errors, warnings and infos
            "problemMatcher": "$msCompile"
        }
    ]
}